<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="RunNpm" DependsOnTargets="EnsureNode" BeforeTargets="BeforeBuild" Condition=" Exists('$(NpmFile)') ">
        <PropertyGroup>
            <RunNpmCmd>"$(NodePath)\npm" $(NpmCommand)</RunNpmCmd>
        </PropertyGroup>

        <Exec Command="$(RunNpmCmd)"
            CustomErrorRegularExpression="(ERR!.*is not in the npm registry|Usage:)"/>
    </Target>
<!-- vim: set ft=xml sw=4 :-->
</Project>
